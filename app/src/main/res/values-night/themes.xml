<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Base.BuggyNote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:navigationBarColor">@color/dark_grey</item>
        <item name="android:statusBarColor">@color/dark_grey</item>
        <item name="windowActionModeOverlay">true</item>

    </style>

    <style name="Theme.BuggyNote" parent="Theme.Base.BuggyNote">
        <item name="backgroundColor">@color/dark_grey</item>
        <item name="colorSurface">@color/dark_grey</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_A200</item>
        <item name="colorPrimaryVariant">@color/indigo_A700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo_A200</item>
        <item name="colorSecondaryVariant">@color/indigo_A200</item>
        <item name="colorOnSecondary">@color/black</item>

    </style>

</resources>