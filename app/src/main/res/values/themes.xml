<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Base.BuggyNote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.BuggyNote" parent="Theme.Base.BuggyNote">
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/indigo_500</item>
        <item name="colorSecondaryVariant">@color/indigo_700</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Theme.BuggyNote.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BuggyNote.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BuggyNote.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.BuggyNote.Tag" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">?textAppearanceCaption</item>
        <item name="android:textSize">5sp</item>
        <item name="chipBackgroundColor">?colorSurface</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@drawable/stroke_color</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Theme.BuggyNote.TagFilter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textSize">5sp</item>
        <item name="chipBackgroundColor">?colorSurface</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@drawable/stroke_color</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

</resources>