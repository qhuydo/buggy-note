<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Base.BuggyNote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:windowLightStatusBar" tools:targetApi="23">@bool/useLightSystemBars
        </item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">
            @bool/useLightSystemBars
        </item>
        <item name="android:statusBarColor">@color/status_bar_scrim</item>
        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>

        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">@color/grey_200
        </item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.BuggyNote" parent="Theme.Base.BuggyNote">
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/indigo_500</item>
        <item name="colorSecondaryVariant">@color/indigo_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="tint">?colorOnSurface</item>
    </style>

    <style name="Theme.BuggyNote.Popup" parent="">
        <item name="enforceMaterialTheme">true</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.BuggyNote.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.AppTheme.AppBar" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="Theme.BuggyNote.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BuggyNote.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:colorBackground">?colorSurface</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Theme.BuggyNote.Tag" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">?colorSurface</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@drawable/stroke_color</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Theme.BuggyNote.TagFilter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="maxWidth">@dimen/tag_filter_max_width</item>
        <item name="checkedIconTint">?colorPrimary</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="chipBackgroundColor">?colorSurface</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@drawable/stroke_color</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>
    <!--        <item name="checkedIconVisible">false</item>-->

</resources>