<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="note_item_time_stamp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">?colorControlNormal</item>
        <item name="android:textAppearance">?textAppearanceCaption</item>
    </style>
    <!--        <item name="android:paddingTop">4dp</item>-->

    <style name="note_item_content">
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">10</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="note_item_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="note_item_tag_group">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="note_details_time_stamp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?textAppearanceCaption</item>
        <item name="android:textColor">?colorControlNormal</item>
    </style>

    <style name="note_details_title">
        <item name="android:textAppearance">?textAppearanceHeadline4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|top</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
        <item name="android:labelFor">@id/title_layout</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="note_details_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:gravity">start</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
        <item name="android:labelFor">@id/content_layout</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="note_list_recycler_view">
        <item name="android:layout_weight">1</item>
        <item name="android:animateLayoutChanges">false</item>
        <item name="android:layoutAnimation">@anim/layout_animator</item>
        <item name="android:paddingStart">@dimen/item_note_padding_top</item>
        <item name="android:paddingEnd">@dimen/item_note_padding_top</item>
        <item name="android:paddingTop">@dimen/item_note_padding_top</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="tag_filter_list_recycler_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:nestedScrollingEnabled">false</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="placeholder_emoticon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?textAppearanceHeadline2</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="placeholder_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
    </style>

    <style name="tag_selection_content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?colorSurface</item>
        <item name="android:focusable">true</item>
        <item name="android:labelFor">@id/add_tag_layout</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textAppearance">?textAppearanceListItem</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tag_selection_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="item_tag_editor_content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?colorSurface</item>
        <item name="android:focusable">true</item>
        <item name="android:inputType">text</item>
        <item name="android:labelFor">@id/add_tag_layout</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAppearance">?textAppearanceListItem</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="item_tag_start_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?colorSurface</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="add_tag_editor_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:labelFor">@id/add_tag_layout</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="add_tag_editor_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="tag_editor_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:animateLayoutChanges">false</item>
        <item name="android:layoutAnimation">@anim/layout_animator</item>
    </style>

</resources>