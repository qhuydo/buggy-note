<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="note_item_time_stamp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAppearance">?textAppearanceCaption</item>
    </style>

    <style name="note_item_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">10</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
    </style>

    <style name="note_item_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
    </style>

    <style name="note_item_tag_group">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">0dp</item>
    </style>

    <style name="note_details_time_stamp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?textAppearanceCaption</item>
    </style>

    <style name="note_details_title">
        <item name="android:textAppearance">?textAppearanceHeadline4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|top</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
        <item name="android:labelFor">@id/title_layout</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="note_details_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:gravity">start</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
        <item name="android:labelFor">@id/content_layout</item>
        <item name="android:textAlignment">gravity</item>
    </style>
</resources>